<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOrders"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:src="@drawable/food"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salad"
                    android:textSize="25dp"
                    android:fontFamily="@font/inter_font"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="30.000 đ"
                    android:fontFamily="@font/inter_font"
                    android:textColor="#F9AE6A"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:backgroundTint="@null"
                android:text="Hủy"
                android:textSize="20sp"
                android:visibility="gone"
                android:background="@drawable/custom_btn_order"
                />

            <Button
                android:id="@+id/btnAgain"
                android:layout_width="120dp"
                android:layout_height="60dp"
                app:backgroundTint="@null"
                android:text="Mua lại"
                android:visibility="gone"
                android:textSize="20sp"
                android:background="@drawable/custom_btn_order"
                />
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="125dp"
                android:layout_height="60dp"
                app:backgroundTint="@null"
                android:text="Confirm"
                android:visibility="gone"
                android:textSize="20sp"
                android:background="@drawable/custom_btn_order"
                />

            <Button
                android:id="@+id/btnGiao"
                android:layout_width="130dp"
                android:layout_height="60dp"
                app:backgroundTint="@null"
                android:text="Giao"
                android:visibility="gone"
                android:textSize="20sp"
                android:background="@drawable/custom_btn_order"
                />

            <Button
                android:id="@+id/btnSuccess"
                android:layout_width="130dp"
                android:layout_height="60dp"
                app:backgroundTint="@null"
                android:text="Success"
                android:visibility="gone"
                android:textSize="20sp"
                android:background="@drawable/custom_btn_order"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/txtShowmore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#807575"
            android:textAlignment="center"
            android:textStyle="italic"
            android:text="Xem thêm sản phẩm"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:layout_weight="10"
                android:textColor="@color/main"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtTotalOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 Đ"
                android:textColor="@color/main"
                android:layout_weight="10"
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/4/2024"
                android:layout_weight="10"
                android:textColor="@color/main"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ xác nhận"
                android:textColor="@color/main"
                android:layout_weight="10"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@null"
            android:text="Hủy"
            android:textSize="25sp"
            android:visibility="gone"
            android:background="@drawable/custom_btn_order"
            />
    </LinearLayout>




</androidx.cardview.widget.CardView>