<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="52dp"
            android:layout_height="76dp"
            android:paddingStart="15dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/txtTitleDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:fontFamily="@font/irishgrover_regular"
            android:text="SnackSnap"
            android:textAlignment="center"
            android:textSize="35sp" />
        <ImageView
            android:id="@+id/imbtnFavo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_heart"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imvProduct"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/food"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banh trang"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_font"
        />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30.000 Ä‘"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imbtnMinus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_minus"/>

        <TextView
            android:id="@+id/txtNumberOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <ImageView
            android:id="@+id/imbtnAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_add"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/txtDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_font"
            android:text="Delivery info"/>
        <TextView
            android:id="@+id/txtdeliveryContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/inter_font"
            android:textStyle="italic"
            android:text="Delivered between monday aug and thursday 20 from 8pm to 91:32 pm"/>

        <TextView
            android:id="@+id/txtReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_font"
            android:text="Retrun policy"/>
        <TextView
            android:id="@+id/txtReturnContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/inter_font"
            android:textStyle="italic"
            android:text="All our foods are double checked before leaving our stores so by any case you found a broken food please contact our hotline immediately."/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add To Cart"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_font"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:background="@drawable/custom_btn_order"
        app:backgroundTint="@null"/>

</LinearLayout>